                Label:
                    text:"Espaço da cozinha"
                    font_size:"30sp"
                    bold:True

            BoxLayout:
                orientation: 'vertical'
                size_hint_y:None
                height:"90dp"
                padding:root.width * 0.36, 0
                spacing: 30
                ButtonOk:
                    text:"Receitas"
                    size_hint_y:None
                    height:"30dp"
                    bold:True
                    font_size:"18sp"

                ButtonOk:
                    text:"Ingredientes"
                    size_hint_y:None
                    height:"30dp"
                    bold:True
                    font_size:"18sp"

                ButtonOk:
                    text:"utensílios"
                    size_hint_y:None
                    height:"30dp"
                    bold:True
                    font_size:"18sp"

            BoxLayout:
                size_hint_y:None
