<ButtonOk@ButtonBehavior+Label>:
    canvas.before:
        Color:
            rgba:1, .7, 0, 1
        RoundedRectangle:
            pos:self.pos
            size:self.size
            radius:[20]
<CadastroButton@ButtonBehavior+Label>:
    color: 0, 1, 1, 1
    font_size: "20sp"
    bold: True